#!/bin/bash

if [[ -n "${__UTILS_STRING_IN__}" ]]; then
	return
else
	__UTILS_STRING_IN__="$0"
fi

#
#$1:dst
#$2:src
#[$3:ifs]
#
strcat () {
	local dst="$1"
	local src="$2"
	local ifs="$3"; ifs=${ifs:- }

	if [[ -z "${src}" ]]; then
		echo "${dst}"
	elif [[ -z "${dst}" ]]; then
		echo "${src}"
	else
		echo "${dst}${ifs}${src}"
	fi
}
